<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<options>
			<ROOT>
				<TCEforms>
					<sheetTitle>Chart</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<chart.doughnut.cutoutPercentage>
						<TCEforms>
							<label>Cutout Percentage</label>
							<displayCond>FIELD:parentRec.CType:=:chart_doughnut</displayCond>
							<config>
								<type>input</type>
								<size>10</size>
								<eval>trim,int</eval>
								<default>0</default>
								<range>
									<lower>0</lower>
									<upper>85</upper>
								</range>
								<slider>
									<step>5</step>
									<width>200</width>
								</slider>
							</config>
						</TCEforms>
					</chart.doughnut.cutoutPercentage>
				</el>
			</ROOT>
		</options>
		<legend>
			<ROOT>
				<TCEforms>
					<sheetTitle>Legend</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<chart.legend.active>
						<TCEforms>
							<label>Activate</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</chart.legend.active>
					<chart.legend.position>
						<TCEforms>
							<label>Position</label>
							<config>
								<type>select</type>
                                <renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Top</numIndex>
										<numIndex index="1">top</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Left</numIndex>
										<numIndex index="1">left</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Right</numIndex>
										<numIndex index="1">right</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">Bottom</numIndex>
										<numIndex index="1">bottom</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</chart.legend.position>
				</el>
			</ROOT>
		</legend>
	</sheets>
</T3DataStructure>
